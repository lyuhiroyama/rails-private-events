<div id="<%= dom_id event %>">
  <p>
    <strong>Event name:</strong>
    <%= event.event_name %>
  </p>

  <p>
    <strong>Event date:</strong>
    <%= event.event_date %>
  </p>

  <p>
    <strong>Creator:</strong>
    <%= link_to event.event_creator.name, user_path(event.event_creator) %>
  </p>

  <p>
    <strong>Attendees:</strong>
    <%= event.users_attending.map {
      |user| link_to user.name, user_path(user)
      }
      .join(", ").html_safe
    %>
  </p>

</div>
